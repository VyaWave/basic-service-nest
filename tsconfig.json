{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": false
  },
  "exclude": ["client/**/*", "dist", "packages/**/*"]
}
